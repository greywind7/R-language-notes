# ********************string manipulations********************
# tolower() changes to lower case
tolower("XYZ")
# strsplit() to split string using smth
strsplit("x.y",'.')
# strsplit() to split string using smth
strsplit("x.y",'\.')
# strsplit() to split string using smth
strsplit("x.y",'\\.')
# sub() substitutes given character with specified character
sub('\\.','$',"x.y.x")
?sub
# sub() substitutes given character with specified character
sub('\\.','$',"x.y.x")
# sub() substitutes given character with specified character
sub('\\.','$',"x.y.x",fixed = T)
# sub() substitutes given character with specified character
sub('\\.','$',"x.y.x",fixed = T)
# sub() substitutes given character with specified character
sub('\\.','$',"x.y.x",fixed = F)
# sub() substitutes given character with specified character
gsub('\\.','$',"x.y.x")
# grep() to search instances of the strings
grep('a',c('a','b','c', rep = 3))
z <- c('a','b','c', rep = 3)
z
# grep() to search instances of the strings
grep('a',rep(c('a','b','c'), 3))
# grepl() gives the number of instances
grepl('a',rep(c('a','b','c'), 3))
# grepl() gives the logical vector of instances
z[grepl('a',rep(c('a','b','c'), 3))]
# grep() to search instances of the strings
grep('a',rep(c('a b','b','c'), 3))
# grep() to search instances of the strings
grep('a',rep(c('a b','b','c'), 3), value = T)
